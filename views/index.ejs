<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/styles.css">
    <title>Blog Home</title>
</head>
<body>
    <div class="container">
        <header>
            <h1>Blog Posts</h1>
            <a href="/post/new" class="button">Create New Post</a>
        </header>
        <ul>
            <% posts.forEach(post => { %>
                <li>
                    <h2><%= post.title %></h2>
                    <p><%= post.content %></p>
                    <a href="/post/edit/<%= post.id %>" class="button">Edit</a>
                    <form action="/post/delete/<%= post.id %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
